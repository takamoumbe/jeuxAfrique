<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:id="@+id/horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#1B71DA"
                android:textSize="18dp"
                android:text="Football"
                />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#1B71DA"
                android:textSize="18dp"
                android:text="Aventure"
                />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#1B71DA"
                android:textSize="18dp"
                android:text="Cources"
                />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#1B71DA"
                android:textSize="18dp"
                android:text="Lance de des"
                />

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#1B71DA"
                android:textSize="18dp"
                android:text="Cartes"
                />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#1B71DA"
                android:textSize="18dp"
                android:text="Lettres"
                />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#1B71DA"
                android:textSize="18dp"
                android:text="Jeux Olympiques"
                />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#1B71DA"
                android:textSize="18dp"
                android:text="Jeux enfants"
                />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#1B71DA"
                android:textSize="18dp"
                android:text="Devinettes"
                />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#1B71DA"
                android:textSize="18dp"
                android:text="Casino"
                />


        </LinearLayout>

    </HorizontalScrollView>

    <ImageView
        android:layout_below="@+id/horizontal"
        android:id="@+id/gagner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/gagner" />

    <ScrollView
        android:layout_below="@+id/gagner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:background="@drawable/borduregrande"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:weightSum="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:background="@drawable/bordure"
                    android:alpha="0.8"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp"
                        android:text="Top jeux"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:background="@drawable/roundimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/roundimage"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/guerre" />
            </LinearLayout>

            <TextView
                android:layout_width="271dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.3"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nomjeux"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Force defence sniper "
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_below="@+id/nomjeux"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:text="mise : 155 XAF "
                    android:textColor="#787777"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:textAllCaps="false"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/roundboutton"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:textColor="#1B71DA"
                    android:text="Jouer" />
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>